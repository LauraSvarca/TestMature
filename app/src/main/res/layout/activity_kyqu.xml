<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".kyqu"
    >
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Frame"
        ></FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#028F1F"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu">

    </android.support.design.widget.NavigationView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/Test"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="monospace"
            android:paddingTop="30dp"
            android:text="Miresevini ne testin e Matures"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Drejtimi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ju lutem zgjidhni drejtimin!"
            android:layout_below="@+id/Test"
            android:textSize="15dp"
            />

        <Spinner
            android:id="@+id/Spinner"
            android:layout_width="194dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Drejtimi" />

        <TextView
            android:id="@+id/Lendet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="178dp"
            android:text="Ju lutem zgjidhni lendet!"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/lenda1"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text=" Matematike" />

        <CheckBox
            android:id="@+id/lenda2"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lenda1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text=" Fizike" />

        <CheckBox
            android:id="@+id/lenda3"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lenda1"
            android:text=" Biologji" />

        <CheckBox
            android:id="@+id/lenda4"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lenda1"
            android:layout_toEndOf="@+id/lenda1"
            android:text=" Gjuhe Shqipe" />

        <CheckBox
            android:id="@+id/lenda5"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/lenda1"
            android:text=" Gjuhe Angleze" />

        <CheckBox
            android:id="@+id/lenda6"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lenda1"
            android:layout_toEndOf="@+id/lenda1"
            android:text="Kimi" />

        <Button
            android:id="@+id/vazhdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="41dp"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:text="Vazhdo"
            android:textAlignment="center" />

        <Button
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="38dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="127dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:text="Location"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/get_location"
            android:layout_width="175dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="115dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"/>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


